-
  function getModifiers(classMain, modifiers) {
    if (!classMain || !modifiers || modifiers.length === 0) {
      return;
    }

    let result = '';

    modifiers.forEach((modifier) => {
      result = `${result}${classMain}--${modifier} `;
    });

    return result.slice(0, -1);
  }

block vars
  - let lang = 'en';
  - let keywords = 'important, keywords';
  - let description = 'short description';
  - let title = 'Webpage Title';

doctype html
html(lang=lang)
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='keywords', content=keywords)
    meta(name='description', content=description)
    title #{title} | TOXIN
  block body
