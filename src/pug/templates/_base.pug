-
  function getModifiers(classMain, mods) {
    const isArgsValid = classMain && mods && mods.length;

    if (!isArgsValid) {
      return;
    }

    let result = '';

    mods.forEach((mod) => {
      result = `${result}${classMain}--${mod} `;
    });

    return result.slice(0, -1);
  }

block vars
  - let lang = 'en';
  - let keywords = 'important, keywords';
  - let description = 'short description';
  - let title = 'Webpage Title';

doctype html
html(lang=lang)
  head
    meta(charset='utf-8')
    meta(http-equiv='x-ua-compatible', content='ie=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='keywords', content=keywords)
    meta(name='description', content=description)
    title #{title} | TOXIN
  block body
