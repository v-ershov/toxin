//- üûÇ name: string  - –∏–º—è –æ—Ç—Ç–µ–Ω–∫–∞ (–≤ –ø—Ä–æ–∏–∑–≤–æ–ª—å–Ω–æ–π —Ñ–æ—Ä–º–µ)
//- üûÇ hex: string   - HEX-–∫–æ–¥ –æ—Ç—Ç–µ–Ω–∫–∞

mixin ui-color(options)
  -
    const defaults = {
      color: 'undefined',
      name: 'undefined',
      hex: 'undefined',
    };

  -
    const {
      color,
      name,
      hex,
    } = Object.assign(defaults, options);

  .ui-color
    ._color(class=`ui-color__color--background--${color}`)
    ._info
      ._name
        | #{name}
      ._hex
        | #{hex}
