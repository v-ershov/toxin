include /blocks/advantages/advantages.pug
include /blocks/button/button.pug
include /blocks/button-like/button-like.pug
include /blocks/button-option/button-option.pug
include /blocks/calendar/calendar.pug
include /blocks/dropdown/dropdown.pug
include /blocks/ecl/ecl.pug
include /blocks/field/field.pug
include /blocks/form-field/form-field.pug
include /blocks/list-bullet/list-bullet.pug
include /blocks/pagination/pagination.pug
include /blocks/rating/rating.pug
include /blocks/review/review.pug
include /blocks/slider-range/slider-range.pug

mixin main-ui-form-elements
  main.main-ui-form-elements
    ._container
      h1._h1.visually-hidden
        | Form Elements
      section._section
        h2._h2.visually-hidden
          | Fields
        section._subsection
          h3._h3.visually-hidden
            | Text Fields
          ul._list
            li._item
              +field('Text Field', 'Default', [], {
                'type': 'email',
                'placeholder': 'Email',
              })
            li._item
              +field('Text Field', 'Hover / Focus', [], {
                'placeholder': 'Enter text',
                'value': 'This is pretty awesome',
              })
            li._item
              +dropdown('Dropdown', 'Default', {
                'placeholder': 'Сколько гостей',
              }, ['гость', 'гостя', 'гостей'], [
                [0, 0, 3, '', 'взрослые', '', ''],
                [0, 0, 3, '', 'дети', '', ''],
                [0, 0, 1, 'младенец', 'младенцы', 'младенца', 'младенцев'],
              ])
            li._item
              +field('Masked Text Field', 'Default', [], {
                'placeholder': 'ДД.ММ.ГГГГ',
                'data-mask': '00.00.0000',
              })
        section._subsection
          h3._h3.visually-hidden
            | Date Dropdowns
          ul._list
            li._item
              +calendar({
                type: 'fields',
                selectedDates: '2020-12-15/2020-12-19',
                labelFirst: 'Date Dropdown',
                labelSecond: 'Date Dropdown',
              })
            li._item.-width-266.-margin-40
              +calendar({
                type: 'field',
                selectedDates: '2020-12-15/2020-12-19',
                labelFirst: 'Filter Date Dropdown',
              })
        section._subsection
          h3._h3.visually-hidden
            | One Field Forms
          ul._list
            li._item.-width-266
              +form-field('Subscription Text Field', '', {
                'type': 'email',
                'placeholder': 'Email',
              })
      section._section
        h2._h2.visually-hidden
          | Buttons (Checkbox, Radio, Toggle, Like, Rate)
        section._subsection
          h3._h3
            | Checkbox Buttons
          ul._list
            li._item.-width-230
              +button-option({
                text: 'Можно курить',
                modifiers: ['checkbox'],
              })
            li._item.-width-230.-margin-10
              +button-option({
                text: 'Можно с питомцами',
                modifiers: ['checkbox'],
                attrs: {
                  checked: true,
                },
              })
            li._item.-width-230.-margin-10
              +button-option({
                text: 'Можно пригласить гостей (до 10 человек)',
                modifiers: ['checkbox'],
                attrs: {
                  checked: true,
                },
              })
        section._subsection
          h3._h3
            | Radio Buttons
          ul._list.-flex
            li._item.-flex
              +button-option({
                text: 'Мужчина',
                modifiers: ['radio'],
                attrs: {
                  name: 'gender',
                  checked: true,
                },
              })
            li._item.-flex
              +button-option({
                text: 'Женщина',
                modifiers: ['radio'],
                attrs: {
                  name: 'gender',
                },
              })
        section._subsection
          h3._h3
            | Toggle
          ul._list
            li._item
              +button-option({
                text: 'Получать спецпредложения',
                attrs: {
                  checked: true,
                },
              })
            li._item.-margin-10
              +button-option({
                text: 'Получать спецпредложения',
              })
        section._subsection
          h3._h3
            | Like Button
          ul._list.-flex
            li._item.-button-like
              +button-like({
                number: 2,
              })
            li._item.-button-like
              +button-like({
                number: 12,
                modifiers: ['active'],
              })
        section._subsection
          h3._h3
            | Rate Button
          ul._list.-flex
            li._item.-flex
              +rating(4)
            li._item.-flex
              +rating(5)
      section._section
        h2._h2.visually-hidden
          | Sliders, Buttons, Pagination
        section._subsection
          h3._h3.visually-hidden
            | Sliders
          ul._list
            li._item.-width-266
              +slider-range('Range Slider', 0, 15000, 5000, 10000, 100, '₽')
        section._subsection
          h3._h3
            | Buttons
          ul._list
            li._item
              ul._list.-flex
                li._item.-flex
                  +button({
                    text: 'Click Me',
                    modifiers: ['fill'],
                  })
                li._item.-flex
                  +button({
                    text: 'Click Me',
                    modifiers: ['fill', 'hover'],
                  })
            li._item.-margin-30
              ul._list.-flex
                li._item.-flex
                  +button({
                    text: 'Click Me',
                  })
                li._item.-flex
                  +button({
                    text: 'Click Me',
                    modifiers: ['hover'],
                  })
            li._item.-margin-30
              ul._list.-flex
                li._item.-flex
                  +button({
                    text: 'Click Me',
                    modifiers: ['bodyless'],
                  })
                li._item.-flex
                  +button({
                    text: 'Click Me',
                    modifiers: ['bodyless', 'text-gray', 'hover'],
                  })
            li._item.-margin-30
              +button({
                text: 'Перейти к оплате',
                modifiers: ['fill', 'wide'],
              })
        section._subsection
          h3._h3
            | Pagination
          ul._list
            li._item
              +pagination
      section._section.-dropdowns
        h2._h2.visually-hidden
          | Dropdowns
        section._subsection.-dropdowns
          h3._h3.visually-hidden
            | Dropdown (Default)
          ul._list
            li._item.-width-266
              +dropdown('Dropdown', 'Default', {
                'placeholder': 'Какие удобства',
              }, [], [
                [2, 0, 3, 'спальня', 'спальни', 'спальни', 'спален'],
                [2, 0, 3, 'кровать', 'кровати', 'кровати', 'кроватей'],
                [0, 0, 1, 'ванная комната', 'ванные комнаты', 'ванные комнаты', 'ванных комнат'],
              ])
            li._item.-width-266
              +dropdown('Dropdown', 'Expanded', {
                'placeholder': 'Какие удобства',
              }, [], [
                [2, 0, 3, 'спальня', 'спальни', 'спальни', 'спален'],
                [2, 0, 3, 'кровать', 'кровати', 'кровати', 'кроватей'],
                [0, 0, 1, 'ванная комната', 'ванные комнаты', 'ванные комнаты', 'ванных комнат'],
              ], false, ['expanded'])
        section._subsection.-dropdowns
          h3._h3.visually-hidden
            | Dropdown (Buttons)
          ul._list
            li._item
              +dropdown('Dropdown', '', {
                'placeholder': 'Сколько гостей',
              }, ['гость', 'гостя', 'гостей'], [
                [0, 0, 3, '', 'взрослые', '', ''],
                [0, 0, 3, '', 'дети', '', ''],
                [0, 0, 1, 'младенец', 'младенцы', 'младенца', 'младенцев'],
              ], true, ['expanded'])
        section._subsection.-dropdowns
          h3._h3.visually-hidden
            | Dropdown (Buttons / Filled)
          ul._list
            li._item
              +dropdown('Dropdown', '', {
                'placeholder': 'Сколько гостей',
              }, ['гость', 'гостя', 'гостей'], [
                [0, 0, 3, '', 'взрослые', '', ''],
                [0, 0, 3, '', 'дети', '', ''],
                [0, 0, 1, 'младенец', 'младенцы', 'младенца', 'младенцев'],
              ], true, ['expanded'])
      section._section
        h2._h2.visually-hidden
          | Expandable Checkbox List
        ul._list
          li._item.-width-266
            +ecl('Expandable Checkbox List', [
              ['Завтрак'],
              ['Письменный стол', true],
              ['Стул для кормления', true],
              ['Кроватка', true],
              ['Телевизор'],
              ['Шампунь'],
              ['Телевизор'],
              ['Шампунь'],
            ])
          li._item.-width-266.-margin-50
            +ecl('Expandable Checkbox List', [
              ['Завтрак'],
              ['Письменный стол', true],
              ['Стул для кормления', true],
              ['Кроватка', true],
              ['Телевизор'],
              ['Шампунь'],
              ['Телевизор'],
              ['Шампунь'],
            ], ['active'])
      section._section
        h2._h2.visually-hidden
          | Additional Buttons
        section._subsection
          h3._h3
            | Rich Checkbox Buttons
          ul._list
            li._item.-width-266
              +button-option({
                text: 'Широкий коридор',
                textRich: 'Ширина коридоров в номере не менее 91 см.',
                modifiers: ['checkbox-rich'],
              })
            li._item.-width-266.-margin-10
              +button-option({
                text: 'Помощник для инвалидов',
                textRich: 'На 1 этаже вас встретит специалист и проводит до номера.',
                modifiers: ['checkbox-rich'],
              })
      section._section
        h2._h2.visually-hidden
          | Lists
        section._subsection
          h3._h3
            | Bullet List
          ul._list
            li._item.-width-266
              +list-bullet([
                ['Нельзя с питомцами'],
                ['Без вечеринок и мероприятий'],
                ['Время прибытия — после 13:00, а выезд до 12:00'],
              ])
      section._section
        h2._h2.visually-hidden
          | Advantages
        ul._list
          li._item.-width-280
            +advantages({
              list: [
                {
                  icon: 'insert_emoticon',
                  title: 'Комфорт',
                  desc: 'Шумопоглощающие стены',
                },
                {
                  icon: 'location_city',
                  title: 'Удобство',
                  desc: 'Окно в каждой из спален',
                },
              ],
              modifiers: ['ui'],
            })
      section._section.-reviews
        h2._h2.visually-hidden
          | Reviews
        ul._list
          li._item
            +review('Мурад Сарафанов', '5 дней назад', '2019-12-17',
            'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.',
            12, true, 'sarafanov-murad.jpg')
