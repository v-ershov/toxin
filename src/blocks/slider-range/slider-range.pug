include /blocks/label/label.pug

mixin slider-range(options)
  -
    const defaults = {
      labelPrimary: 'undefined',
      min: 0,
      max: 0,
      start: 0,
      end: 0,
      step: 0,
      unit: '',
      text: '',
    };

  -
    const {
      labelPrimary,
      min,
      max,
      start,
      end,
      step,
      unit,
      text,
    } = Object.assign(defaults, options);

  - const labelSecondary = `${start.toLocaleString('ru')}${unit} - ${end.toLocaleString('ru')}${unit}`;

  .slider-range.js-slider-range
    +label({
      primary: labelPrimary || 'undefined',
      secondary: labelSecondary,
    })
      input._input.js-slider-range__input(type='hidden', value=labelSecondary)
    ._slider.js-slider-range__slider(data-min=min, data-max=max, data-start=start, data-end=end, data-step=step, data-unit=unit)
    if text
      ._text
        | #{text}
