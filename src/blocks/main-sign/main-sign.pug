include /blocks/form-sign-in/form-sign-in.pug
include /blocks/form-sign-up/form-sign-up.pug

mixin main-sign(options)
  -
    const defaults = {
      isSignUp: false,
    };

  -
    const {
      isSignUp,
    } = Object.assign(defaults, options);

  main.main-sign
    ._background(style='--translateY: 0;')
    ._container
      ._form
        if isSignUp
          +form-sign-up
        else
          +form-sign-in
