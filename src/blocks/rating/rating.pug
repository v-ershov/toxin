//- Parameters:
//- int number - значение рейтинга (от 0 до 5)

//- Examples:
//- +rating(0)
//- +rating(5)

mixin rating(number)
  - let count = 0;

  .rating
    while count < 5
      i.material-icons._icon
        if count < number
          | star
        else
          | star_border
      - count++;
