include /blocks/field/field.pug

mixin calendar(options)
  -
    const defaults = {
      type: 'inline',
      selectedDates: '',
      labelFirst: '',
      labelSecond: '',
      attrsFieldFirst: {},
      attrsFieldSecond: {},
    };

  -
    const {
      type,
      selectedDates,
      labelFirst,
      labelSecond,
      attrsFieldFirst,
      attrsFieldSecond,
    } = Object.assign(defaults, options);

  .calendar(data-type=type, data-selected-dates=selectedDates ? selectedDates : false)
    if type === 'field'
      +field({
        labelPrimary: labelFirst,
        modifiers: ['dropdown'],
        attrs: Object.assign(attrsFieldFirst, {
          placeholder: '–î–î.–ú–ú.–ì–ì–ì–ì',
          readonly: true,
        }),
      })
    else if type === 'fields'
      ._fields
        ._field
          +field({
            labelPrimary: labelFirst,
            modifiers: ['dropdown'],
            attrs: Object.assign(attrsFieldFirst, {
              placeholder: '–î–î.–ú–ú.–ì–ì–ì–ì',
              readonly: true,
            }),
          })
        ._field
          +field({
            labelPrimary: labelSecond,
            modifiers: ['dropdown'],
            attrs: Object.assign(attrsFieldSecond, {
              placeholder: '–î–î.–ú–ú.–ì–ì–ì–ì',
              readonly: true,
            }),
          })
