include /blocks/field/field.pug

mixin calendar(options)
  -
    const defaults = {
      type: 'inline',
      selectedDates: '',
      labelFirst: '',
      labelSecond: '',
      attrsFieldFirst: {},
      attrsFieldSecond: {},
    };

  -
    const {
      type,
      selectedDates,
      labelFirst,
      labelSecond,
      attrsFieldFirst,
      attrsFieldSecond,
    } = Object.assign(defaults, options);

  - const isFields = type === 'fields' || type === 'field';

  .calendar(data-selected-dates=selectedDates || false)
    input._input(type='hidden')
    if isFields
      ._fields
        if type === 'fields'
          ._field
            +field({
              labelPrimary: labelFirst,
              modifiers: ['dropdown'],
              attrs: Object.assign(attrsFieldFirst, {
                placeholder: '–î–î.–ú–ú.–ì–ì–ì–ì',
                readonly: true,
              }),
            })
          ._field
            +field({
              labelPrimary: labelSecond,
              modifiers: ['dropdown'],
              attrs: Object.assign(attrsFieldSecond, {
                placeholder: '–î–î.–ú–ú.–ì–ì–ì–ì',
                readonly: true,
              }),
            })
        else if type === 'field'
          ._field
            +field({
              labelPrimary: labelFirst,
              modifiers: ['dropdown'],
              attrs: Object.assign(attrsFieldFirst, {
                placeholder: '–î–î.–ú–ú.–ì–ì–ì–ì',
                readonly: true,
              }),
            })
    ._container(class=getModifiers('calendar__container', isFields ? ['hidden'] : []))
      ._datepicker
      ._buttons
        ._button
          +button({
            text: '–ü—Ä–∏–º–µ–Ω–∏—Ç—å',
            modifiers: ['bodyless'],
            attrs: {
              name: 'apply',
            },
