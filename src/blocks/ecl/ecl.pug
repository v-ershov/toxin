//- üûÇ text: string        - —Ç–µ–∫—Å—Ç —Å–ø–∏—Å–∫–∞ —á–µ–∫–±–æ–∫—Å–æ–≤
//- üûÇ list: [[            - —Å–ø–∏—Å–æ–∫ —á–µ–∫–±–æ–∫—Å–æ–≤
//-   üûÇ [0]: string       - —Ç–µ–∫—Å—Ç —á–µ–∫–±–æ–∫—Å–∞
//-   üûÇ [1]: boolean      - –µ—Å–ª–∏ true, —Ç–æ —á–µ–∫–±–æ–∫—Å –æ—Ç–º–µ—á–µ–Ω
//-   ]]
//- üûÇ modifiers: string[] - –º–æ–¥–∏—Ñ–∏–∫–∞—Ç–æ—Ä—ã –±–ª–æ–∫–∞

include /blocks/button-option/button-option.pug

mixin ecl(options)
  -
    const defaults = {
      text: 'undefined',
      list: [
        ['undefined'],
        ['undefined'],
        ['undefined'],
      ],
      modifiers: [],
    };

  -
    const {
      text,
      list,
      modifiers,
    } = Object.assign(defaults, options);

  .ecl(class=getModifiers('ecl', modifiers))
    button._button(type='button')
      | #{text}
    ul._list(style='--height: 100vh;')
      each item in list
        li._item
          +button-option({
            text: item[0],
            modifiers: ['checkbox'],
            attrs: {
              checked: item[1],
            },
          })
