//- Options:
//- 🞂 number: number      - номер комнаты
//- 🞂 tag: string         - тег комнаты (Люкс, Эконом и т.д.)
//- 🞂 modifiers: string[] - модификаторы блока

mixin room-info(options)
  -
    const defaults = {
      number: 0,
      tag: '',
      modifiers: [],
    };

  -
    const {
      number,
      tag,
      modifiers,
    } = Object.assign(defaults, options);

  .room-info(class=getModifiers('room-info', modifiers))
    | №&nbsp;
    span._number
      | #{number}
    | &nbsp;
    if tag
      span._tag
        | #{tag}
