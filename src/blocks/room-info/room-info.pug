//- Options:
//- 🞂 number: number - номер комнаты
//- 🞂 tag: string    - тег комнаты (Люкс, Эконом и т.д.)
//- 🞂 mods: string[] - модификаторы блока

mixin room-info(options)
  -
    const defaults = {
      number: 0,
      tag: '',
      mods: [],
    };

  -
    const {
      number,
      tag,
      mods,
    } = Object.assign(defaults, options);

  .room-info(class=getModifiers('room-info', mods))
    | №&nbsp;
    span._number
      | #{number}
    if tag
      span._tag
        | #{tag}
