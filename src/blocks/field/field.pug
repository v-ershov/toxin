//- Options:
//- 🞂 labelPrimary: string   - лейбл поля (первичный)
//- 🞂 labelSecondary: string - лейбл поля (вторичный)
//- 🞂 mods: string[]         - модификаторы блока
//- 🞂 attrs: object          - атрибуты поля

include /blocks/label/label.pug

mixin field(options)
  -
    const defaults = {
      labelPrimary: '',
      labelSecondary: '',
      mods: [],
      attrs: {},
    };

  -
    const {
      labelPrimary,
      labelSecondary,
      mods,
      attrs,
    } = Object.assign(defaults, options);

  +label({
    primary: labelPrimary,
    secondary: labelSecondary,
  })
    span.field(class=getModifiers('field', mods))
      input._input&attributes(attrs)
