//- Options:
//- 🞂 labelPrimary: string   - лейбл поля (первичный)
//- 🞂 labelSecondary: string - лейбл поля (вторичный)
//- 🞂 modifiers: string[]    - модификаторы блока
//- 🞂 attrs: object          - атрибуты поля

include /blocks/label/label.pug

mixin field(options)
  -
    const defaults = {
      labelPrimary: '',
      labelSecondary: '',
      modifiers: [],
      attrs: {},
    };

  -
    const {
      labelPrimary,
      labelSecondary,
      modifiers,
      attrs,
    } = Object.assign(defaults, options);

  +label(labelPrimary, labelSecondary)
    span.field(class=getModifiers('field', modifiers))
      input._input&attributes(attrs)
