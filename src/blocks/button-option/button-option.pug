//- Parameters:
//- string   name         - имя кнопки
//- string   value        - значение кнопки
//- string   text         - текст кнопки
//- string[] modifiers=[] - модификаторы блока

//- Examples:
//- +button-option('news', 'news', 'Subscribe to newsletter')
//- +button-option('news', 'news', 'Subscribe to newsletter')(checked)
//- +button-option('news', 'news', 'Subscribe to newsletter', ['checkbox'])
//- +button-option('news', 'news', 'Subscribe to newsletter', ['checkbox'])(checked)
//- +button-option('gender', 'm', 'Male', ['radio'])
//- +button-option('gender', 'f', 'Female', ['radio'])(checked)

mixin button-option(name, value, text, modifiers=[])
  - let mods = '';
  - if (modifiers.length !== 0) {
  -   modifiers.forEach((mod) => {
  -     mods = `${mods}button-option--${mod} `;
  -   });
  - }

  .button-option(class=mods)
    label._label
      input._input(type=modifiers.includes('radio') ? 'radio' : 'checkbox', name=name, value=value)&attributes(attributes)
      ._box
      ._text
        | #{text}
