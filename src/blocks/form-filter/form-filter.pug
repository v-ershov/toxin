//- +form-filter

include /blocks/button-option/button-option.pug
include /blocks/calendar/calendar.pug
include /blocks/dropdown/dropdown.pug
include /blocks/ecl/ecl.pug
include /blocks/slider-range/slider-range.pug

mixin form-filter
  form.form-filter
    fieldset._fieldset
      ul._list
        li._item.-field
          +calendar({
            type: 'field',
            selectedDates: '2020-12-15/2020-12-19',
            labelFirst: 'Даты пребывания в отеле',
          })
        li._item.-field
          +dropdown('Гости', '', {
            'placeholder': 'Сколько гостей',
          }, ['гость', 'гостя', 'гостей'], [
            [2, 0, 3, '', 'взрослые', '', ''],
            [1, 0, 3, '', 'дети', '', ''],
            [1, 0, 1, 'младенец', 'младенцы', 'младенца', 'младенцев'],
          ])
    fieldset._fieldset
      +slider-range('Range Slider', 0, 15000, 5000, 10000, 100, '₽', 'Стоимость за сутки пребывания в номере')
    fieldset._fieldset
      legend._legend
        | Checkbox Buttons
      ul._list
        li._item
          +button-option({
            text: 'Можно курить',
            modifiers: ['checkbox'],
          })
        li._item
          +button-option({
            text: 'Можно с питомцами',
            modifiers: ['checkbox'],
            attrs: {
              checked: true,
            },
          })
        li._item
          +button-option({
            text: 'Можно пригласить гостей (до 10 человек)',
            modifiers: ['checkbox'],
            attrs: {
              checked: true,
            },
          })
    fieldset._fieldset
      legend._legend
        | Доступность
      ul._list
        li._item
          +button-option({
            text: 'Широкий коридор',
            textRich: 'Ширина коридоров в номере не менее 91 см.',
            modifiers: ['checkbox-rich'],
          })
        li._item
          +button-option({
            text: 'Помощник для инвалидов',
            textRich: 'На 1 этаже вас встретит специалист и проводит до номера.',
            modifiers: ['checkbox-rich'],
          })
    fieldset._fieldset
      +dropdown('Удобства номера', '', {
        'placeholder': 'Какие удобства',
      }, [], [
        [2, 0, 3, 'спальня', 'спальни', 'спальни', 'спален'],
        [2, 0, 3, 'кровать', 'кровати', 'кровати', 'кроватей'],
        [0, 0, 1, 'ванная комната', 'ванные комнаты', 'ванные комнаты', 'ванных комнат'],
      ])
    fieldset._fieldset
      +ecl('Дополнительные удобства', [
        ['Завтрак'],
        ['Письменный стол', true],
        ['Стул для кормления', true],
        ['Кроватка', true],
        ['Телевизор'],
        ['Шампунь'],
      ])
