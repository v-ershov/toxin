//- Options:
//- 🞂 list: [[            - список преимуществ
//-   🞂 [0]: string       - имя иконки из Material Design Icons Font
//-   🞂 [1]: string       - заголовок преимущества
//-   🞂 [2]: string       - описание преимущества
//-   ]]
//- 🞂 modifiers: string[] - модификаторы блока

mixin advantages(options)
  -
    const defaults = {
      list: [
        ['error', 'undefined', 'undefined'],
        ['error', 'undefined', 'undefined'],
        ['error', 'undefined', 'undefined'],
      ],
      modifiers: [],
    };

  -
    const {
      list,
      modifiers,
    } = Object.assign(defaults, options);

  ul.advantages(class=getModifiers('advantages', modifiers))
    each item in list
      li._item
        i._icon.material-icons
          | #{item[0]}
        ._info
          ._title
            | #{item[1]}
          ._desc
            | #{item[2]}
