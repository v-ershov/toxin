//- Parameters:
//- string[] modifiers=[] - модификаторы блока

//- Examples:
//- +button-like(4)
//- +button-like(4, ['active'])

mixin button-like(number, modifiers=[])
  - let mods = '';
  - if (modifiers.length !== 0) {
  -   modifiers.forEach((mod) => {
  -     mods = `${mods}button-like--${mod} `;
  -   });
  - }

  button.button-like(class=mods)&attributes(attributes)
    span._numbers
      span._number
        | #{number}
