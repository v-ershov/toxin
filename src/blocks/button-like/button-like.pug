//- Options:
//- 🞂 number: number      - количество лайков в кнопке
//- 🞂 modifiers: string[] - модификаторы блока

mixin button-like(options)
  -
    const defaults = {
      number: 0,
      modifiers: [],
    };

  -
    const {
      number,
      modifiers,
    } = Object.assign(defaults, options);

  button.button-like(class=getModifiers('button-like', modifiers), type='button')
    span._numbers
      span._number
        | #{number}
