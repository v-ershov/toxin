//- Options:
//- 🞂 number: number - количество лайков в кнопке
//- 🞂 mods: string[] - модификаторы блока

mixin button-like(options)
  -
    const defaults = {
      number: 0,
      mods: [],
    };

  -
    const {
      number,
      mods,
    } = Object.assign(defaults, options);

  button.button-like(class=getModifiers('button-like', mods), type='button')
    span._numbers
      span._number
        | #{number}
