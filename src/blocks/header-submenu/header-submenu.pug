include /blocks/link/link.pug

mixin header-submenu(options)
  -
    const defaults = {
      text: 'undefined',
      href: '/undefined',
      list: [
        ['undefined', '/undefined'],
        ['undefined', '/undefined'],
        ['undefined', '/undefined'],
      ],
    };

  -
    const {
      text,
      href,
      list,
    } = Object.assign(defaults, options);

  .header-submenu.js-header-submenu
