//- Options:
//- 🞂 text: string  - текст главной ссылки подменю
//- 🞂 href: string  - значение атрибута «href» главной ссылки подменю
//- 🞂 list [[       - список подменю
//-   🞂 [0]: string - текст пункта списка
//-   🞂 [1]: string - значение атрибута «href» пункта списка
//-   ]]

include /blocks/link/link.pug

mixin header-submenu(options)
  -
    const defaults = {
      text: 'undefined',
      href: '/undefined',
      list: [
        ['undefined', '/undefined'],
        ['undefined', '/undefined'],
        ['undefined', '/undefined'],
      ],
    };

  -
    const {
      text,
      href,
      list,
    } = Object.assign(defaults, options);

  .header-submenu.js-header-submenu
    +link({
      text,
      mods: ['submenu'],
      attrs: {
        href,
      },
    })
    ul._list.js-header-submenu__list(style='--height: 100vh;')
      each item in list
        li._item
          +link({
            text: item[0],
            attrs: {
              href: item[1],
            },
          })
