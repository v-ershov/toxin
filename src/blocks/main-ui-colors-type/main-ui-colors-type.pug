include /blocks/ui-color/ui-color.pug
include /blocks/ui-type/ui-type.pug

mixin main-ui-colors-type
  main.main-ui-colors-type
    ._container
      h1._h1.visually-hidden
        | Colors & Type
      section._section
        h2._h2.visually-hidden
          | Colors
        ul._list
          li._item
            +ui-color({
              color: 'gray-100p',
              name: 'Dark Shade 100%',
              hex: '#1f2041',
            })
          li._item
            +ui-color({
              color: 'gray-75p',
              name: 'Dark Shade 75%',
              hex: '#1f2041',
            })
          li._item
            +ui-color({
              color: 'gray-50p',
              name: 'Dark Shade 50%',
              hex: '#1f2041',
            })
          li._item
            +ui-color({
              color: 'gray-25p',
              name: 'Dark Shade 25%',
              hex: '#1f2041',
            })
          li._item
            +ui-color({
              color: 'gray-5p',
              name: 'Dark Shade 5%',
              hex: '#1f2041',
            })
          li._item
            +ui-color({
              color: 'primary',
              name: 'Purple',
              hex: '#bc9cff',
            })
          li._item
            +ui-color({
              color: 'secondary',
              name: 'Green',
              hex: '#6fcf97',
            })
      section._section
        h2._h2.visually-hidden
          | Type
        ul._list
          li._item.-type
            +ui-type({
              tag: 'h1',
              text: 'This one is the sub-section or widget title',
            })
          li._item.-type
            +ui-type({
              tag: 'h2',
              text: 'Next one is the item title inside widgets',
            })
          li._item.-type
            +ui-type({
              tag: 'h3',
              text: 'This is a label or CTA text',
            })
          li._item.-type
            +ui-type({
              tag: 'body',
              text: 'This is the body text which is used for most of the design, like paragraphs, lists, etc.',
            })
