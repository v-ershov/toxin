//- Options:
//- 🞂 text: string        - текст кнопки
//- 🞂 modifiers: string[] - модификаторы блока
//- 🞂 attrs: object       - атрибуты кнопки

mixin button(options)
  -
    const defaults = {
      text: 'Button',
      modifiers: [],
      attrs: {},
    };

  -
    const {
      text,
      modifiers,
      attrs,
    } = Object.assign(defaults, options);

  if attrs.href
    a.button(class=getModifiers('button', modifiers))&attributes(attrs)
      | #{text}
  else
    button.button(class=getModifiers('button', modifiers), type='button')&attributes(attrs)
      | #{text}
