//- Options:
//- 🞂 text: string   - текст кнопки
//- 🞂 mods: string[] - модификаторы блока
//- 🞂 attrs: object  - атрибуты кнопки

mixin button(options)
  -
    const defaults = {
      text: 'undefined',
      mods: [],
      attrs: {},
    };

  -
    const {
      text,
      mods,
      attrs,
    } = Object.assign(defaults, options);

  if attrs.href
    a.button(class=getModifiers('button', mods))&attributes(attrs)
      | #{text}
  else
    button.button(class=getModifiers('button', mods), type='button')&attributes(attrs)
      | #{text}
