mixin dropdown(options)
  -
    const defaults = {
      list: [
        {
          name: 'undefined',
          values: [0, 0, 0],
          words: [],
        },
        {
          name: 'undefined',
          values: [0, 0, 0],
          words: [],
        },
        {
          name: 'undefined',
          values: [0, 0, 0],
          words: [],
        },
      ],
      words: ['undefined', 'undefined', 'undefined'],
      labelPrimary: '',
      labelSecondary: '',
      isButtons: false,
      modifiers: [],
      attrsField: {},
    };

  -
    const {
      list,
      words,
      labelPrimary,
      labelSecondary,
      isButtons,
      modifiers,
      attrsField,
    } = Object.assign(defaults, options);

  .dropdown(class=getModifiers('dropdown', modifiers))
    +field({
      labelPrimary,
      labelSecondary,
      modifiers: ['dropdown'],
      attrs: Object.assign(attrsField, {
        readonly: true,
        'data-words': words.length ? `${words[0]}, ${words[1]}, ${words[2]}` : false,
      }),
    })
    ._menu(style='--height: 100vh;')
      ul._list
        each item in list
          li._item(data-words=item.words.length ? `${item.words[0]}, ${item.words[1]}, ${item.words[2]}` : false)
            ._name
              | #{item.name}
            ._controls
              button._spinner(type='button', name='decrement', disabled)
                | &minus;
              input._number(type='number', value=item.values[0], min=item.values[1], max=item.values[2], readonly)
              button._spinner(type='button', name='increment')
                | +
      if isButtons
        ._buttons
          ._button
            +button({
              text: '–ü—Ä–∏–º–µ–Ω–∏—Ç—å',
              modifiers: ['bodyless'],
              attrs: {
                name: 'apply',
              },
            })
          ._button.-reset.-hidden
            +button({
              text: '–û—á–∏—Å—Ç–∏—Ç—å',
              modifiers: ['bodyless', 'text-gray'],
              attrs: {
                name: 'reset',
              },
            })
