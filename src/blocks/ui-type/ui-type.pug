mixin ui-type(options)
  -
    const defaults = {
      tag: 'undefined',
      text: 'undefined',
    };

  -
    const {
      tag,
      text,
    } = Object.assign(defaults, options);

  .ui-type(class=`ui-type--theme--${tag.toLowerCase()}`)
