include /blocks/button/button.pug
include /blocks/button-option/button-option.pug
include /blocks/field/field.pug

mixin form-sign-up
  form.form-sign-up(method='post')
    header._header
      h2._h2
        | Регистрация аккаунта
    ._row
      +field('', '', [], {
        'placeholder': 'Имя',
        'required': true,
      })
    ._row
      +field('', '', [], {
        'placeholder': 'Фамилия',
        'required': true,
      })
    ._row.-flex
      ._radio
        +button-option({
          text: 'Мужчина',
          modifiers: ['radio'],
          attrs: {
            name: 'gender',
            checked: true,
          },
        })
      ._radio
        +button-option({
          text: 'Женщина',
          modifiers: ['radio'],
          attrs: {
            name: 'gender',
          },
        })
    ._row.-margin-20
      +field('Дата рождения', '', [], {
        'placeholder': 'ДД.ММ.ГГГГ',
        'data-mask': '00.00.0000',
        'required': true,
      })
    ._row.-margin-20
      +field('Данные для входа в сервис', '', [], {
        'type': 'email',
        'placeholder': 'Email',
        'required': true,
      })
    ._row
      +field('', '', [], {
        'type': 'password',
        'placeholder': 'Пароль',
        'required': true,
      })
    ._row
      +button-option({
        text: 'Получать спецпредложения',
      })
    ._button
      +button({
        text: 'Перейти к оплате',
        modifiers: ['fill', 'wide'],
        attrs: {
          type: 'submit',
        },
      })
    footer._footer
      | Уже есть аккаунт на Toxin
      ._button.-flex
        +button({
          text: 'Войти',
          attrs: {
            href: '/',
          },
        })
