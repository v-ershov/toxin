//- +form-reservation

include /blocks/button/button.pug
include /blocks/calendar/calendar.pug
include /blocks/dropdown/dropdown.pug
include /blocks/room-info/room-info.pug
include /blocks/room-price/room-price.pug
include /blocks/tooltip/tooltip.pug

mixin form-reservation
  form.form-reservation(method='post')
    header._header
      h2._h2.visually-hidden
        | Забронировать номер
      ._info
        +room-info('888', 'Люкс')
      ._price
        +room-price('9 990₽')
    ._row
      +calendar({
        type: 'fields',
        selectedDates: '2020-12-15/2020-12-19',
        labelFirst: 'Прибытие',
        labelSecond: 'Выезд',
        attrsFieldFirst: {
          required: true,
        },
        attrsFieldSecond: {
          required: true,
        },
      })
    ._row
      +dropdown({
        list: [
          {
            name: 'взрослые',
            values: [2, 0, 3],
            words: [],
          },
          {
            name: 'дети',
            values: [1, 0, 3],
            words: [],
          },
          {
            name: 'младенцы',
            values: [0, 0, 1],
            words: ['младенец', 'младенца', 'младенцев'],
          },
        ],
        words: ['гость', 'гостя', 'гостей'],
        labelPrimary: 'Гости',
        attrsField: {
          placeholder: 'Сколько гостей',
          required: true,
        },
      })
    table._table
      tbody._tbody
        tr._tr
          td._td
            | 9&nbsp;990₽ х 4 суток
          td._td.-tooltip
          td._td.-price
            | 39&nbsp;960₽
        tr._tr
          td._td
            | Сбор за услуги: скидка 2&nbsp;179₽
          td._td.-tooltip
            +tooltip('Здесь будет подсказка (хорошая)')
          td._td.-price
            | 0₽
        tr._tr
          td._td
            | Сбор за дополнительные услуги
          td._td.-tooltip
            +tooltip('Здесь будет подсказка (хорошая и красивая)')
          td._td.-price
            | 300₽
      tfoot._tfoot
        tr._tr
          td._td.-total(colspan='2')
            span._dots
              | Итого
          td._td.-total.-price
            | 38&nbsp;081₽
    ._button
      +button({
        text: 'Забронировать',
        modifiers: ['fill', 'wide'],
      })
