include /blocks/button/button.pug
include /blocks/field/field.pug

mixin form-sign-in
  form.form-sign-in(method='post')
    header._header
      h2._h2
        | Войти
    ._row
      +field({
        attrs: {
          type: 'email',
          placeholder: 'Email',
          required: true,
        },
      })
    ._row
      +field({
        attrs: {
          type: 'password',
          placeholder: 'Пароль',
          required: true,
        },
      })
    ._button
      +button({
        text: 'Войти',
        modifiers: ['fill', 'wide'],
        attrs: {
          type: 'submit',
        },
      })
    footer._footer
      | Нет аккаунта на Toxin?
      ._button.-flex
        +button({
          text: 'Создать',
          attrs: {
            href: '/',
          },
        })
